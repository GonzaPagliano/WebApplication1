@model IEnumerable<WebApplication1.Models.Rubro>

@{
    ViewData["Title"] = "LISTADO DE RUBROS";
}

<h1>LISTADO DE RUBROS</h1>

<p>

</p>
<p>
    <button type="button" class="btn btn-primary" data-toggle="modal" id="AbrirModal()" data-target="#exampleModal"> Nuevo Rubro </button>
</p>


<table class="table table-bordered  table-sm border-bottom">
   
    <thead class="table-dark">
        <tr>
            <th class="col-md-6 text-center">
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th class="col-md-3 text-center ">ID</th>
            <th class="col-md-3 text-center">OPCIONES</th>
        </tr>
    </thead>
    <tbody id="tbody-rubros">

    </tbody>
</table>

<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="Titulo-Modal-Rubro">Nuevo Rubro</h5>
                <button type="button" class="close" data-dismiss="modal" onclick="VaciarFormulario()" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <input type="hidden" id="RubroID" value="0" />
                    <div class="form-group">
                        <label for="exampleInputEmail1"> RUBRO </label>
                        <input type="email" class="form-control" style="text-transform:uppercase" autocomplete="off" id="RubroNombre" @*aria-describedby="rubronuevo" placeholder="Descripcion"*@/>   
                        <p class="text-danger font-weight-bold small" id="Error-RubroNombre"></p>
                    </div>
                </form>
            </div>
            
            
            <div class="modal-footer">
                <button type="button" onclick="VaciarFormulario()" class="btn btn-outline-danger" data-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-outline-success" onclick="GuardaRubro()">Guardar</button>
            </div>
        </div>
    </div>
</div>

 @*ES PARA QUE ANDE EL JS*@

@section Scripts {
    
    <script src="~/js/Rubro-1.0.js"></script>
    <script>
        window.onload = CompletarTablaRubros();
    </script>
}